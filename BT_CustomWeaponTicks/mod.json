{
  "Name": "BT_CustomWeaponTicks",
  "Version": "1.0.0.0",
  "Description": "Changes the size of the weapon ticks preview in combat.",
  "Author": "NBK_RedSpy",
  "Website": "https://github.com/NBKRedSpy/BT_CustomWeaponTicks",

  "Enabled": true,

  "DLL": "BT_CustomWeaponTicks.dll",

  "Settings": {
    "xScale": -1,
    "yScale": 1.5,
    "zScale": 1,
    "maxIndividualScale": 2,
    "nextColorKeyBinding": {
      "active": true,
      "keys": [ "shift", "t" ]
    },
    "colorSets": [
      {
        "Description" : "Default"
        "TickMarkOptimal": [ 247, 155, 38 ],
        "TickMarkNonOptimal": [ 161, 161, 161 ],
        "TickMarkTargetedOptimal": [ 240, 66, 40 ],
        "TickMarkTargetedNonOptimal": [ 208, 164, 78 ],
      },
      {
        "Description": "RGB Test",
        "TickMarkOptimal": [ 255, 0, 0 ],
        "TickMarkNonOptimal": [ 0, 255, 0 ],
        "TickMarkTargetedOptimal": [ 0, 0, 255 ],
        "TickMarkTargetedNonOptimal": [ 0, 128, 128 ]
      }

    ]

  }

}
